<div class="sign_up">

  <%= form_tag sessions_create_path do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] %>
  </p>
  <p class="button"><%= submit_tag 'Log in' %></p>
  <% end %>

  <p>Need an account?  <%= link_to 'Sign up', '#'  %></p>
</div>