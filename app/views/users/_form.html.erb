<div class="sign_up">
  <% url = (@user.new_record? ? users_path : user_path(@user)) %>

  <%= simple_form_for @user, :url => url do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, 'Create Account' %>
  <% end %>
</div>